<h2><%= l(:risks_label) %></h2>


<% if tabs.size > 0 -%>

<% selected_tab = params[:tab] ? params[:tab].to_s : tabs.first[:name] %>

<div class="tabs">
<ul>
<% tabs.each do |tab| -%>
<li>
	<%= link_to l(tab[:label]),
		{ :controller=>tab[:controller],:action => tab[:action] },
		:id => "tab-#{tab[:name]}",
                :class => (tab[:name] != selected_tab ? nil : 'selected')%>
</li>
<% end -%>


</ul>
</div>


<% end -%>


